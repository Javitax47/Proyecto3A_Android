<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/rosa</item>
        <item name="colorPrimaryDark">@color/rosa</item>
        <item name="colorAccent">@color/white</item>

    </style>

    <style name="CustomTabIconSize" parent="Widget.Design.TabLayout">
        <item name="tabIconTint">@color/tab_icon_selector</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PrivacidadTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/rosa</item>
        <item name="colorPrimaryDark">@color/rosaOscuro</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <style name="CollapsedTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ExpandedTitleStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>


    <style name="splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="apartadoSensor" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/rosa</item>
        <item name="colorPrimaryDark">@color/rosaOscuro</item>
        <item name="colorAccent">@color/white</item>
    </style>


</resources>